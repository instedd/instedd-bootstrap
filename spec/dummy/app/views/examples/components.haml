.span12
  %h1 UI components

  %hr

  %h3 Breadcrumbs

  .row-fluid
    .span6

      - breadcrumb do
        - breadcrumb_item 'Root', '#'
        - breadcrumb_item 'Item', '#'
        - breadcrumb_item 'Detail'

  %hr

  %h3 State Display

  .row-fluid
    .span4
      .StateDisplay
        .values
          .U
            %span.big 8639
            %span 0 messages
        .action
          %button
            Download as CSV

  .row-fluid
    .span4
      .StateDisplay
        .values
          .L
            %span 30.75
            %span remaining
          .R
            %span 69.25
            %span used
          %br{:style => "clear:both"}
          .M
            %span.Fill{:style => "width:30%"}
        .action
          %button.orange
            Buy more credit

  .row-fluid
    .span4
      .StateDisplay
        .values.empty
          .L
            %span 0.00
            %span no remaining credit
          .R
            %span
          %br{:style => "clear:both"}
          .M
            %span
        .action
          %button.orange
            Buy more credit

  .row-fluid
    .span4
      .StateDisplay
        .values
          .L
            %span 182
            %span tasks done
          .R
            %span 14
            %span pending
          %br{:style => "clear:both"}
          .M
            %span.Fill{:style => "width:90%"}
        .action
          %button.orange
            Start recruiting

  .row-fluid
    .span4
      .StateDisplay
        .values.done
          .L
            %span 196
            %span tasks done
          .R
            %span
          %br{:style => "clear:both"}
          .M
            %span
        .action
          %button.disabled
            No pending tasks

